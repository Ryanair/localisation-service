@model Translations.Models.FileFolder

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>FileFolder</legend>



			<div class="editor-label">
				<label for="tag">Tag</label>
			</div>
			<div class="editor-field">
				@Html.DropDownList("tag.TagKey",Translations.Helpers.Core.ListTags)
			</div>
			<div class="editor-label">
				<label for="lang">Lang</label>
			</div>
			<div class="editor-field">
				@Html.DropDownList("lang.langKey",Translations.Helpers.Core.ListLanguages)
			</div>


        <div class="editor-label">
            @Html.LabelFor(model => model.FolderName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FolderName)
            @Html.ValidationMessageFor(model => model.FolderName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FileName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FileName)
            @Html.ValidationMessageFor(model => model.FileName)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
